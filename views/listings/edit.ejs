<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form
        method="post"
        action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <h3>Edit your form</h3>
        <div class="mb-3">
          <lable for="title" class="form-lable">Title</lable>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid Title</div>
        </div>

        <div class="mb-3">
          <lable for="description" class="form-lable">Description</lable>
          <textarea
            name="listing[description]"
            value="<%= listing.description %>"
            type="text"
            class="form-control"
            required
          >
 <%=listing.description %> </textarea
          >
          <div class="invalid-feedback">Please enter a valid Description</div>
        </div>
        <div class="mb-3 card-img-top">
            <img style="height: 300px; width: 400px;" src="<%= originalImageUrl %>" />
        </div>

        <div class="mb-3">
          <lable for="image" class="form-lable">Upload New Image</lable>
          <input
            name="listing[image]"
            class="form-control"
            type="file"
          />
          <div class="invalid-feedback">Please Upload a valid image</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-lable">Country</lable>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid country</div>
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-lable">Location</lable>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid location</div>
        </div>

        <button class="btn btn-dark edit-btn mt-3">Edit</button>
      </form>
    </div>
  </div>
</body>
<script src="/js/script.js"></script>
