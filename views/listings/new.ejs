<% layout("/layouts/boilerplate.ejs") %>
<body>
  <form
    method="post"
    action="/listings"
    novalidate
    class="needs-validation"
    enctype="multipart/form-data"
  >
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h1>Create a New Listing</h1>
        <br />
        <div class="mb-3">
          <lable for="title" class="form-lable">Title</lable>
          <input
            name="listing[title]"
            placeholder="Add a catchy Title"
            type="text"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title looks Good</div>
          <div class="invalid-feedback">Please enter a valid title</div>
        </div>
        <div class="mb-3">
          <lable for="description" class="form-lable">Description :</lable>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please enter a valid description</div>
        </div>

        <div class="mb-3">
          <lable for="image" class="form-lable">Upload Listing Image</lable>
          <input
            name="listing[image]"
            type="file"
            class="form-control"
            required
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-lable">Price</lable>
            <input
              name="listing[price]"
              placeholder="1200"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>
          <div class="mb-3 col-md-8">
            <lable for="Country" class="form-lable">Country</lable>
            <input
              name="listing[country]"
              placeholder="India"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter the country name</div>
          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-lable">Location</lable>
          <input
            name="listing[location]"
            placeholder="Bangalore"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter the location</div>
        </div>
        <br />
        <button class="btn btn-dark add-btn">Add</button>
      </div>
    </div>
    <br />
  </form>
</body>
